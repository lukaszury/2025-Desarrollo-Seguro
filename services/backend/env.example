# Archivo de ejemplo de variables de entorno
# Copia este archivo como .env y configura los valores apropiados

# Base de datos - REQUERIDAS
DB_HOST=localhost
DB_USER=your_secure_username_here
DB_PASS=your_secure_password_here
DB_NAME=your_database_name_here
DB_PORT=5432

# JWT Secret - REQUERIDO (m√≠nimo 32 caracteres)
JWT_SECRET=your_super_secure_jwt_secret_key_here_at_least_32_characters_long

# SMTP para emails
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Entorno
NODE_ENV=development
